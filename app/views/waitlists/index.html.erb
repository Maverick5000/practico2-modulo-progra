<p id="notice"><%= notice %></p>

<h1>Lista de Espera</h1>

<table>
  <thead>
    <tr>
      <th>Pelicula</th>
      <th>Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @waitlists.each do |waitlist| %>
      <tr>
        <td><%= waitlist.tape_id %></td>
        <td><%= waitlist.client_id %></td>
        <td><%= link_to 'Ver', waitlist %></td>
        <td><%= link_to 'Editar', edit_waitlist_path(waitlist) %></td>
        <td><%= link_to 'Borrar', waitlist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva entrada', new_waitlist_path %>
