<p id="notice"><%= notice %></p>

<h1>Directores</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @directors.each do |director| %>
      <tr>
        <td><%= director.name %></td>
        <td><%= link_to 'Ver', director %></td>
        <td><%= link_to 'Editar', edit_director_path(director) %></td>
        <td><%= link_to 'Borrar', director, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva entrada', new_director_path %>
