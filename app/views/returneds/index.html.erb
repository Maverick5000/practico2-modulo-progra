<p id="notice"><%= notice %></p>

<h1>Peliculas Devueltas</h1>

<table>
  <thead>
    <tr>
      <th>Pelicula</th>
      <th>Cliente</th>
      <th>Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @returneds.each do |returned| %>
      <tr>
        <td><%= returned.tape.name %></td>
        <td><%= returned.client.name %></td>
        <td><%= returned.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= link_to 'Ver', returned %></td>
        <td><%= link_to 'Editar', edit_returned_path(returned) %></td>
        <td><%= link_to 'Borrar', returned, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva entrada', new_returned_path %>
