<p id="notice"><%= notice %></p>

<h1>Actores</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td><%= actor.name %></td>
        <td><%= link_to 'Ver', actor %></td>
        <td><%= link_to 'Editar', edit_actor_path(actor) %></td>
        <td><%= link_to 'Borrar', actor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva entrada', new_actor_path %>
