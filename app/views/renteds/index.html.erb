<p id="notice"><%= notice %></p>

<h1>Peliculas Rentadas</h1>

<table>
  <thead>
    <tr>
      <th>Pelicula</th>
      <th>Cliente</th>
      <th>Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @renteds.each do |rented| %>
      <tr>
        <td><%= rented.tape.name %></td>
        <td><%= rented.client.name %></td>
        <td><%= rented.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= link_to 'Ver', rented %></td>
        <td><%= link_to 'Editar', edit_rented_path(rented) %></td>
        <td><%= link_to 'Borrar', rented, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva entrada', new_rented_path %>
