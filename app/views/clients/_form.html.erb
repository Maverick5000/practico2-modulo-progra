<%= semantic_form_for @client do |f| %>
    <%= f.inputs do %>
      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.input :address %>
      <%= f.input :phone %>
      <%= f.input :genres, :as => :select, :multiple => true %>
      <%= f.input :directors, :as => :select, :input_html => { :multiple => true } %>
      <%= f.input :actors, :as => :select, :input_html => { :multiple => true } %>
    <% end %>
    <%= f.actions do %>
      <%= f.action :submit, :as => :button %>
      <%= f.action :cancel, :as => :link %>
    <% end %>
  <% end %>
